<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="@color/white"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    android:id="@+id/bottome_delete_user"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >


    <TextView
        android:id="@+id/textView"
        style="@style/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure want to delete ?"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/delete_yes"
        style="@style/Buttone01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:text="Yes"
        app:layout_constraintTop_toBottomOf="@+id/delete_no"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/delete_no"
        style="@style/Buttone02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:text="No"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>