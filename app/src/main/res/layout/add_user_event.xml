<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/add_user_event_constrainlayout"
    android:background="@color/white"
    app:layout_behavior="@string/bottom_sheet_behavior"

    >

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/add_user_event_recylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/add_new_event_type"
        tools:layout_editor_absoluteX="16dp"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:textColor="@color/white"
        style="@style/Buttone01"
        android:text="Add new event type"
        android:id="@+id/add_new_event_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>